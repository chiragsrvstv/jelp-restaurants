<% include ../partials/header.ejs %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
    <h1> Welcome to YelpCamp </h1>
    <p class="lead"> View all of our handpicked campgrounds from all over the world </p>
    <p>
      <a class="btn btn-lg btn-primary" href="/campgrounds/new" role="button"> Add New Campground </a>
    </p>
    </div>
  </header>


  <div class="row text-center main">

      <% campgrounds.forEach(function(camps){ %>
          <div class = "col-md-3 col-sm-6">
            <div class="thumbnail">
              <img class="" src=<%= camps.image %> >
              <div class="caption">
                <h4> <%= camps.name %> </h4>
              </div>
              <p>
                <a href="/campgrounds/<%= camps._id %>" class="btn btn-primary"> More Info </a>
              </p>
            </div>
          </div>
      <% }); %>
  </div>

</div>

  <% include ../partials/footer.ejs %>
